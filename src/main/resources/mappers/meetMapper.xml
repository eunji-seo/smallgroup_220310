<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.smallgroup.meet.dao.MeetDAO">
 	<select id="selectFavoriteById" parameterType="String" resultType="com.smallgroup.user.model.Favorite">
 		SELECT
 			`id`
			,`favoriteName`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`favorite`
 	</select>
 	<insert id="insertMeetFavorite" parameterType="map">
 		INSERT INTO `meet_favorite`
 		(
 			`userId`
			,`favoriteId`
			,`favoriteName`
			,`createdAt`
			,`updatedAt`
			
 		)
 		VALUES
 		(
 			#{userId}
 			,#{favoriteId}
 			,#{favoriteName}
 			,NOW()
 			,NOW()
 		)
 	</insert>
 	<select id="selectMeetFavorite" resultType="com.smallgroup.meet.model.MeetFavorite">
 		SELECT * FROM meet_favorite
 	</select>
 	<insert id="insertMeet" parameterType="int">
	 	INSERT INTO `meet`
	 	(
	 		`userId`
			,`favoriteId`
			,`meetAddress`
			,`meetName`
			,`desc`
			,`meetImagePath`
			,`personnel`
			,`createdAt`
			,`updatedAt`
	 			
	 	)
	 	VALEUS
	 	(
	 		#{userId}
	 		,#{favoriteId}
	 		,#{meetAddress}
	 		,#{meetName}
	 		,#{desc}
	 		,#{meetImagePath}
	 		,#{personnel}
	 		,NOW()
	 		,NOW()	 		
	 	)
 	</insert>
 </mapper>